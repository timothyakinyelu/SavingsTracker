<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.HomeFragment">

    <LinearLayout
        android:id="@+id/incomeTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/incomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:text="@string/incomeTitle"
            android:fontFamily="@font/montserrat"
            android:textAppearance="@style/incomeTitle"
            />

        <TextView
            android:id="@+id/incomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incomeText"
            android:fontFamily="@font/montserrat"
            android:textAppearance="@style/incomeText"
            android:gravity="center_horizontal|center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/greetingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/incomeTextLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcomeText"
            android:fontFamily="@font/montserrat"
            android:textAppearance="@style/welcomeText"
            />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:fontFamily="@font/montserrat"
            android:textAppearance="@style/user"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>